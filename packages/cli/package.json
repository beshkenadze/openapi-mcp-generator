{
  "name": "@workspace/cli",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "bin": {
    "mcpgen": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap && tsc -p tsconfig.json --emitDeclarationOnly && bun run ./scripts/add-shebang.ts",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "bun test"
  },
  "dependencies": {
    "@workspace/core": "workspace:*",
    "@clack/prompts": "^0.10.0",
    "yaml": "^2.5.0"
  }
}
